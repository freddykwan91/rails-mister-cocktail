n<div class="container container-show">
  <h1><%= @cocktail.name %></h1>

  <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>

  <h3>Ingredients</h3>
  <% @cocktail.doses.each do |dose| %>
  <ul>
    <li>
       <%= dose.ingredient.name %>
       <%= link_to "Delete", dose_path(dose), method:"delete", class:"btn btn-danger" %>
    </li>
  </ul>
  <% end %>

  <%= link_to "Add Ingredients", new_cocktail_dose_path(@cocktail), class:"btn btn-primary" %>
  <%= link_to "Delete", cocktail_path(@cocktail), method:"delete", class:"btn btn-danger" %>
  <%= link_to "Back to Menu", cocktails_path, class:"btn btn-primary" %>
</div>
